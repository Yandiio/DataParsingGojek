<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgGOjek"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/gojek"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgGOjek">


        <ImageView
            android:id="@+id/imageButton"
            android:layout_width="170dp"
            android:layout_height="200dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/menu_gofood"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="242dp" />

        <ImageView
            android:id="@+id/imageButton2"
            android:layout_width="170dp"
            android:layout_height="200dp"
            android:layout_marginRight="16dp"
            app:srcCompat="@drawable/menu_gomart"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="242dp" />

        <ImageView
            android:id="@+id/imageButton3"
            android:layout_width="170dp"
            android:layout_height="200dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:srcCompat="@drawable/menu_gosend"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="242dp" />

        <ImageView
            android:id="@+id/imageButton4"
            android:layout_width="170dp"
            android:layout_height="200dp"
            android:layout_marginRight="16dp"
            app:srcCompat="@drawable/menu_goride"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="242dp" />

    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

